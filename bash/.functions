#!/bin/bash

# Create a new directory and enter it
function md() {
  mkdir -p "$@" && cd "$@"
}

# clean the current directory
function clean() {
    read -p "remove everything here? (y/N)" yn
    if [ $yn = "y" ]; then
        rm -rf ./* ./.*
    fi
}

# check processes using a port
function port() {
    lsof -iTCP:$1 -sTCP:LISTEN
}

# archive a file/dir
function archive() {
  mv $1 ~/Archives
}